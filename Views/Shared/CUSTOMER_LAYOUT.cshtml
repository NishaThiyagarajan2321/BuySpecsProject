<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
            border-right: 1px solid #bbb;
        }

            li:last-child {
                border-right: none;
            }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover:not(.active) {
                    background-color: #111;
                }

        .active {
            background-color: #4CAF50;
        }
    </style>
</head>
<body>
    <ul>

        <li>@Html.ActionLink("VIEW SPECS", " ViewSpecs", "UserRegister")</li>
        <li>@Html.ActionLink("VIEW CART", "Viewcart", "UserRegister")</li>
        <li>@Html.ActionLink("VIEW ORDERED DETAILS", "ViewOrderedDetails", "UserRegister")</li>
        <li>@Html.ActionLink("SearchByName", "Index", "SearchSpecs")</li>
        <li>@Html.ActionLink("LOG OUT", "Logout", "UserRegister")</li>


        @*<li>@Html.ActionLink("SearchByType", "SearchByType", "SearchSpecs")</li>*@
    </ul>
    <div>
        @RenderBody()
    </div>
</body>
</html>
