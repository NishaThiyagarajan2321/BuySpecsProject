@model IEnumerable<BuySpecsProject.Models.SPECS_DETAILS>

@{
    //Layout = null;
    ViewBag.Title = "Index";
}
@using (Html.BeginForm("Index", "SearchSpecs", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="Search" />

}
<head>
    <style>
        body {
            background-image: url('../../Images/bg..jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>

</head>

<table>
    <tr>
        @*<th>SPECS_ID</th>*@
        <th>SPECS_NAME</th>
        <th>SPECS_IMAGE</th>
        <th>FRAME_TYPE</th>
        <th>FRAME_WIDTH</th>
        <th>SPECS_PRICE</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    @*<td>@Html.DisplayFor(modelitem => item.SPECS_ID)</td>*@
    <td>@Html.DisplayFor(modelitem => item.SPECS_NAME)</td>
    <td> <img src="@Url.Content(item.SPECS_IMAGE)" width="200" height="200" /></td>
    <td>@Html.DisplayFor(modelitem => item.FRAME_TYPE)</td>
    <td>@Html.DisplayFor(modelitem => item.FRAME_WIDTH)</td>
    <td>@Html.DisplayFor(modelitem => item.SPECS_PRICE)</td>


</tr>

    }

</table>
